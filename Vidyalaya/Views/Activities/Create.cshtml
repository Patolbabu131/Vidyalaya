@model Vidyalaya.Models.Activities
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<div class="modal fade" id="Activite" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New Activities</h5>
                <i style="font-size:24px" class="fa">&#xf00d;</i>

            </div>
            <div class="modal-body">
                <form asp-action="Create">

                    <div class="form-group" hidden>
                        <label asp-for="SId" class="control-label"></label>
                        <input id="liWithID" asp-for="SId" class="form-control" value="" />

                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ATitle" class="control-label"></label>
                        <input asp-for="ATitle" class="form-control" />
                        <span asp-validation-for="ATitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ADescription" class="control-label"></label>
                        <input asp-for="ADescription" class="form-control" />
                        <span asp-validation-for="ADescription" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
