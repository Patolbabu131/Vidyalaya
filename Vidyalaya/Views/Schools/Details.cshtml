    ViewData["Title"] = "Details";
}
@{
    int id = ViewBag.VBFriend;
}

<html>
<body onload="Activities_(@id);">
    <h1>Details</h1>
    <hr/>
    <div id="page_load">
        <h4>School</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SCity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SCity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SState)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SState)
